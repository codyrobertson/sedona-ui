# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================

# PostHog API key - get from https://app.posthog.com/project/settings
# When empty, analytics is disabled (no-op)
NEXT_PUBLIC_POSTHOG_KEY=

# PostHog API host (default: https://us.i.posthog.com)
# Use https://eu.i.posthog.com for EU data residency
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Explicitly disable analytics even if key is set (default: enabled)
# Set to "false" to disable
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Debug mode - logs events to console instead of sending
# Set to "true" for development
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# =============================================================================
# SOLANA / WEB3
# =============================================================================

# Solana RPC endpoint
# NEXT_PUBLIC_SOLANA_RPC_URL=

# Solana network (mainnet-beta, devnet, testnet)
# NEXT_PUBLIC_SOLANA_NETWORK=devnet

# =============================================================================
# API
# =============================================================================

# Backend API URL
# NEXT_PUBLIC_API_URL=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service (Beehiiv, Resend, etc.)
# BEEHIIV_API_KEY=
# RESEND_API_KEY=
